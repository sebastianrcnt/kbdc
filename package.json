{
  "name": "kbdc",
  "version": "1.0.0",
  "description": "Multi-page HTML project with TypeScript and Tailwind CSS",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/output.css --minify",
    "build:js": "node build.js",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "tailwindcss -i ./src/styles/input.css -o ./dist/output.css --watch",
    "watch:js": "node build.js --watch",
    "dev": "npm run watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.20.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  }
}
